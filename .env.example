# ARYA-RAG Environment Configuration

# Basic Configuration
NODE_ENV=development
PORT=3001

# Database
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Models Configuration - Choose your provider
# Options: ollama (local/free) or openai (cloud/paid)

# Embedding Configuration
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=mistral
LLM_TEMPERATURE=0.3

# Ollama Settings (if using local models)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Settings (if using cloud models)
OPENAI_API_KEY=sk-your-key-here

# Processing Settings (Optimized for Large Documents)
CHUNK_SIZE_TOKENS=600
CHUNK_OVERLAP_TOKENS=100
MAX_CHUNKS_PER_BATCH=500
PROCESSING_TIMEOUT_MINUTES=30
MAX_FILE_SIZE_MB=100

# Search Configuration
DEFAULT_TOP_K=10
MAX_TOP_K=20
MIN_SIMILARITY_THRESHOLD=0.7

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000